<div class="modal fade" id="editExpenseModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="editExpenseModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content card-dashboard">
            <div class="modal-header">
                <h5 class="modal-title" id="addExpenseModal">Edit Expense</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body d-grid gap-3">
                <div class="d-flex justify-content-between">
                    <h4 class="fs-5">Tag</h4>
                    <div class="d-flex justify-content-end">
                        {{> dropdown}}
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <h4 class="fs-5">Product</h4>
                    <div class="d-flex justify-content-end">
                        <input type="text" class="form-control" placeholder="Edit Product" aria-label="Add Product"
                            aria-describedby="addon-wrapping" id="edit-product"/>
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <h4 class="fs-5">Price</h4>
                    <div class="d-flex justify-content-end">
                        <input type="text" class="form-control" placeholder="Edit Price" aria-label="Edit Price"
                            aria-describedby="addon-wrapping" id="edit-price" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">
                    Cancel
                </button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal" id="delete-product">Delete</button>
                <button type="button" class="btn btn-success" id="edit-expense">Done</button>
            </div>
        </div>
    </div>
</div>